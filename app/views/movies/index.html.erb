<body>

<h1>Liste des films</h1>
<%= pluralize(@movies.count, 'film') %>
<ul>
<% @movies.each do |m| %>
<li><strong><%= m.titre%></strong> - <%= m.autorisation %> - 
	<%= format_chiffre_affaire(m)%>
